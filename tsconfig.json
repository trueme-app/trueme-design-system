{
  "compilerOptions": {
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true
  },
  "include": [
    "./src/**/*",
    "./fonts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
